<!-- BEGIN .col-main -->
	<li class="col-main">				
		<h2 class="page-title"><%= @product.title %></h2>

		<ul class="columns-2 product-single-content clearfix">
			<li class="col2 clearfix">
				<!-- BEGIN .slider -->
				<div class="slider-single slide-loader-single clearfix">
					<ul class="slides">
						
						<li>
							<%= image_tag @product.photo.url(:big) %>
						</li>
						<li>
							<%= image_tag @product.photo.url(:big) %>
						</li>
						<li>
							<%= image_tag @product.photo.url(:big) %>
						</li>
					</ul>
				<!-- END .slider -->
				</div>
				
			</li>
			<li class="col2 clearfix">
				
				<h2>
					<span class="price-original"><%= @product.price + @product.price*0.1   %></span>
					<span class="price-now"><%= number_to_currency(@product.price) %></span>
					
				</h2>
				
				<p><%= simple_format h(@product.description) %></p>
				
