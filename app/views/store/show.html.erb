				</li>
<% content_for :sidebar do %>
	<!-- BEGIN .col-sidebar -->
	<li class="col-sidebar">

		<div class="widget">
			<div id="cart">
			<% if @cart %>
				
				 <%= render @cart %>
				
			<% end %>
			</div>
		</div>	
		
		
		<div class="widget">
			<div class="widget-title clearfix"><h4 class="tag-title">Категории</h4></div>
			<ul>
				<% Category.all.each do |cat| %>
					<li><%= link_to cat.name, cat %></a></li>
				<% end %>
			</ul>
		</div>
		
	<!-- END .col-sidebar -->
	</li>
<% end %>